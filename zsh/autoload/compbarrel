# Generate barrel for components classes under the current folder.

function compbarrel {
  local INDEX='index.ts'

  rg --files -g '*.component.ts'  \
    | sort \
    | sed -e "s,^,export * from './,;s,\.ts$,'\;," \
    > $INDEX
}
