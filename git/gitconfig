[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[core]
  editor = nvim
  autocrlf = input
[user]
  name = Mark Grealish
  email = mark@bhalash.com
[alias]
  # pull
  p = pull
  # push
  u = push
  uf = push --force
  # rebase
  rb = "!_rebase() { git pull origin ${1:-main} --rebase; }; _rebase"
  rbu = "!_rebase_push() { git pull origin ${1:-main} --rebase && git push --force; }; _rebase_push"
  # commit
  m = commit
  mm = commit -m
  cc = "!_save() { git add .; git commit -m \"${@:-saving work in flight}\"; }; _save"
  # shorthands
  a = add
  b = branch
  d = difftool
  c = checkout
  r = reset
  s = status
  t = stash
  aa = add .
  cp = cherry-pick
  # util
  nuke = !git branch -D
  branchname = symbolic-ref --short HEAD
  conflicted = diff --name-only --diff-filter=U
  dammit = !git push -u origin $(git branchname)
  squish = "!_squish() { git reset $(git merge-base ${1:-main} $(git rev-parse --abbrev-ref HEAD)); }; _squish"
  unchanged = ls-files -v | grep \"^[[:lower:]]\"
  undo = "!_undo() { git reset --soft HEAD~${1:-1}; git status; }; _undo"
  untracked = ls-files --others --exclude-standard
[pull]
  rebase = true
[includeIf "gitdir/i:**/Work/"]
  path = ~/Work/.gitconfig
[init]
  defaultBranch = main
[diff]
  tool = nvimdiff
[difftool]
  prompt = false
