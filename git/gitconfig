[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[core]
  editor = nvim
[user]
  name = Mark Grealish
  email = mark@bhalash.com
[alias]
  a = add
  b = branch
  c = checkout
  m = commit
  p = pull
  r = reset
  s = status
  t = stash
  u = push
  y = cherry-pick
  bn = rev-parse --abbrev-ref HEAD
  cc = "!_save() { git add .; git commit -m \"${@:-saving work in flight}\"; }; _save"
  mm = commit -m
  pm = pull origin master
  branchname = symbolic-ref --short HEAD
  conflicted = diff --name-only --diff-filter=U
  dammit = !git push -u origin $(git branchname)
  squish = "!_squish() { git reset $(git merge-base ${1:-develop} $(git rev-parse --abbrev-ref HEAD)); }; _squish"
  unchanged = ls-files -v | grep \"^[[:lower:]]\"
  undo = "!_undo() { git reset --soft HEAD~${1:-1}; git status; }; _undo"
  untracked = ls-files --others --exclude-standard
[pull]
  rebase = true
[includeIf "gitdir:~/Work/"]
  path = ~/Work/.gitconfig
[init]
	defaultBranch = main
